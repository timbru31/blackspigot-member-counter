{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"removeComments": true,
		"target": "es2018",
		"typeRoots": ["types", "node_modules/@types"]
	},
	"include": ["src/*.ts"]
}
